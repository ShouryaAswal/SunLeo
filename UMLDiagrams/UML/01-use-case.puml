@startuml
left to right direction

actor User
actor "YouTube" as YouTube

rectangle "SunLeo App" {
  usecase "Search Video" as UCSearch
  usecase "Get Recommendations" as UCRecommend
  usecase "Request Convert" as UCConvert
  usecase "Process Queue" as UCQueue
  usecase "Download File" as UCDownload
  usecase "Notify Ready" as UCNotify
}

User --> UCSearch
User --> UCRecommend
User --> UCConvert
User --> UCDownload
UCConvert --> UCQueue
UCQueue --> UCDownload
UCDownload --> UCNotify
UCSearch --> YouTube
UCConvert --> YouTube

@enduml
