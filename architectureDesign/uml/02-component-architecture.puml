@startuml
' Component Architecture (Clean + Hexagonal)
left to right direction
skinparam componentStyle rectangle

package "Frontend" {
  [Web App Shell] as UI1
  [Chat UI] as UI2
  [Search Results UI] as UI3
  [Conversion Status UI] as UI4
}

package "API Gateway" {
  [Gateway: Auth, Rate Limit, Validation] as APIGW
}

package "Domain Core" {
  [Use Case: Search] as UC1
  [Use Case: Convert] as UC2
  [Use Case: Deliver] as UC3
  [Entities + Policies] as ENT
}

package "Ports (Interfaces)" {
  [SearchPort] as P1
  [ConvertPort] as P2
  [StoragePort] as P3
  [ChatPort] as P4
}

package "Adapters" {
  [YouTube API Adapter] as A1
  [MP3 Module Adapter] as A2
  [Storage Adapter] as A3
  [Chat Model Adapter] as A4
  [Notification Adapter] as A5
}

[YouTube Data API] as YT
[MP3 Conversion Module] as MOD
[File Storage] as STORE

UI1 --> APIGW
UI2 --> APIGW
UI3 --> APIGW
UI4 --> APIGW

APIGW --> UC1
APIGW --> UC2
APIGW --> UC3

UC1 --> P1
UC2 --> P2
UC3 --> P3

P1 --> A1
P2 --> A2
P3 --> A3
P4 --> A4

A1 --> YT
A2 --> MOD
A3 --> STORE
@enduml
